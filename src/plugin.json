{
  "$schema": "https://raw.githubusercontent.com/grafana/grafana/main/docs/sources/developers/plugins/plugin.schema.json",
  "type": "app",
  "name": "Logs",
  "id": "grafana-lokiexplore-app",
  "info": {
    "keywords": ["app", "loki", "explore", "logs"],
    "description": "Query-less exploration of log data stored in Loki",
    "author": {
      "name": "Grafana"
    },
    "logos": {
      "small": "img/logo.svg",
      "large": "img/logo.svg"
    },
    "screenshots": [
    {
      "name": "service-index",
      "path": "img/service_index.png"
    },
    {
      "name": "service-logs",
      "path": "img/service_logs.png"
    }
  ],
    "version": "%VERSION%",
    "updated": "%TODAY%",
    "links": [
      {
        "name": "Github",
        "url": "https://github.com/grafana/loki-explore"
      },
      {
        "name": "Report bug",
        "url": "https://github.com/grafana/loki-explore/issues/new"
      }
    ]
  },
  "includes": [
    {
      "type": "page",
      "name": "Logs",
      "path": "/a/%PLUGIN_ID%/explore",
      "action": "grafana-lokiexplore-app:read",
      "addToNav": true,
      "defaultNav": true
    }
  ],
  "roles": [
    {
      "role": {
        "name": "Explore Logs Viewer",
        "description": "Can view logs in the explore logs view",
        "permissions": [{ "action": "grafana-lokiexplore-app:read" }]
      },
      "grants": ["Editor"]
    }
  ],
  "dependencies": {
    "grafanaDependency": ">=10.0.3",
    "plugins": []
  }
}
